@model HotelManagementSystem.Models.Hotel

@{
    ViewData["Title"] = "Details";
}

<h3>Details</h3>
<hr />
<div class="row pb-2">
    <div class="col-md-4">
        <form method="post" asp-action="Details">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" readonly="readonly"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" type="number" readonly="readonly"/>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Latitude" class="control-label"></label>
                <input asp-for="Latitude" class="form-control" type="number" readonly="readonly"/>
                <span asp-validation-for="Latitude" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Longitude" class="control-label"></label>
                <input asp-for="Longitude" class="form-control" type="number" readonly="readonly"/>
                <span asp-validation-for="Longitude" class="text-danger"></span>
            </div>
            <br />
            <div>
    <a asp-controller="Hotel" asp-action="Index" class="btn btn-secondary" style="width:150px">Back to List</a>
</div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
